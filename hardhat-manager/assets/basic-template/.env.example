# Environment Variables Template
# Copy this file to .env and fill in your values

# Private Key (never commit to version control)
PRIVATE_KEY=your_private_key_here

# Infura API Key (for Ethereum networks)
INFURA_API_KEY=your_infura_api_key_here

# RPC URLs
MAINNET_RPC_URL=https://mainnet.infura.io/v3/${INFURA_API_KEY}
GOERLI_RPC_URL=https://goerli.infura.io/v3/${INFURA_API_KEY}
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/${INFURA_API_KEY}
POLYGON_RPC_URL=https://polygon-rpc.com
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Block Explorer API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# Gas Reporting (optional)
REPORT_GAS=true

# Coverage (optional)
COVERAGE=true

# Network Configuration
DEFAULT_NETWORK=localhost
TIMEOUT=60000

# Contract Verification
AUTOMATIC_VERIFICATION=true

# Security
PRIVATE_KEY_ENCRYPTION=false